<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kangjisung.likeroom.ActivityStoreSelect"
    android:background="?attr/theme_color_D4">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@mipmap/icon_bread"
        app:backgroundTint="?attr/theme_color_D3"
        android:layout_centerInParent="true" />

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/include_main_background" />

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_width="320dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:text="@string/selectStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtSelectStore"
                style="@android:style/Widget.TextView"
                android:textSize="35dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="?attr/theme_color_L4" />

            <RelativeLayout
                android:background="?attr/theme_color_D1"
                android:id="@+id/newStoreAddLayout"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_height="40dp"
                    android:id="@+id/imgAddNewStore"
                    android:layout_width="40dp"
                    android:backgroundTint="?attr/theme_color_L2"
                    android:background="@mipmap/icon_plus_in_circle"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:alpha="0.5" />

                <TextView
                    android:text="@string/addNewStore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAddNewStore"
                    android:textColor="?attr/theme_color_L4"
                    android:layout_weight="1"
                    android:textSize="22dp"
                    android:layout_marginStart="10dp"
                    android:layout_centerInParent="true" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnRegisterNewStore"
                    android:background="@drawable/button_ripple_rectangle"
                    android:onClick="onClickView" />

            </RelativeLayout>

            <!--<include
                android:id="@+id/eachStoreListItemSample"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_each_registered_store_item"
                />-->

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_below="@+id/newStoreAddLayout"
                android:id="@+id/registeredStoreList"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
