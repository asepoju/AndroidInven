<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="@dimen/page_corner_radius"
        android:layout_height="@dimen/page_corner_radius"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/rounded_corner"
        android:id="@+id/corner_lt" />
    <View
        android:layout_width="@dimen/page_corner_radius"
        android:layout_height="@dimen/page_corner_radius"
        android:layout_alignParentTop="true"
        android:rotation="90"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/rounded_corner"
        android:id="@+id/corner_rt" />
    <View
        android:layout_width="@dimen/page_corner_radius"
        android:layout_height="@dimen/page_corner_radius"
        android:rotation="270"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/rounded_corner"
        android:id="@+id/corner_lb" />
    <View
        android:layout_width="@dimen/page_corner_radius"
        android:layout_height="@dimen/page_corner_radius"
        android:layout_alignParentBottom="true"
        android:rotation="180"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/rounded_corner"
        android:id="@+id/corner_rb" />

</RelativeLayout>