<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutEachStoreItem"
    android:orientation="horizontal"
    android:layout_height="80dp"
    android:layout_marginTop="15dp"
    android:background="@color/White"
    android:layout_width="fill_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgShopIcon"
        android:background="@mipmap/shop"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:text="매장 주소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtShopAddress"
            android:textColor="@color/clrTextColorMediumDark"
            android:textSize="23dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="매장 전화번호"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtShopPhoneNumber"
            android:textColor="@color/Gray"
            android:textStyle="normal|bold"
            android:textSize="20dp"
            android:layout_alignParentBottom="true" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button2"
            android:background="@mipmap/icon_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</LinearLayout>
