<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutEachStoreItem"
    android:orientation="horizontal"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:background="@color/White"
    android:layout_width="fill_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgShopIcon"
        android:background="@mipmap/shop"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:text="@string/loadingStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtShopName"
            android:textColor="@color/clrTextColorDeepDark"
            android:layout_centerVertical="true"
            android:textSize="25dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtShopPhoneNumber" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtShopAddress" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button2"
            android:background="@mipmap/icon_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:rotation="180" />

    </RelativeLayout>

</LinearLayout>
