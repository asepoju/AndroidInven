<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_fragment_sort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/clrBackgroundLight"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정렬"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSortByName"
                style="@style/LikeRoomTheme.Button.UserSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_sort_asc"
                android:onClick="onClickSortByName"
                android:text="이름"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonSortByRegister"
                style="@style/LikeRoomTheme.Button.UserSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_sort"
                android:onClick="onClickSortByRegister"
                android:paddingRight="10dp"
                android:text="등록일"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buttonSortByModify"
                style="@style/LikeRoomTheme.Button.UserSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_sort"
                android:onClick="onClickSortByModify"
                android:paddingRight="10dp"
                android:text="수정일" />

        </LinearLayout>

    </RelativeLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="80dp"
            android:layout_below="@+id/textView_search_result"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fragment_item_main_linear_layout_bottom_line"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_fragment_item_main_sell_today"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="22dp"
                android:background="@mipmap/x" />

            <RelativeLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="8dp"
                android:background="@color/gray120"></RelativeLayout>

            <ImageButton
                android:id="@+id/btn_fragment_item_main_store_match"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="22dp"
                android:background="@mipmap/v" />
        </LinearLayout>
</RelativeLayout>