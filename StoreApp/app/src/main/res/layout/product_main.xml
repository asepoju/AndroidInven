<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/relative">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/layout_select">

        <View
            android:layout_height="match_parent"
            android:background="@color/gray200"
            android:layout_width="2dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@mipmap/disable_sell_today"
                        app:backgroundTint="@color/gray220"
                        android:layout_centerInParent="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/aciv_sell_today_icon" />

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@drawable/shape_circle"
                        app:backgroundTint="@color/gray220"
                        android:layout_centerInParent="true"
                        android:id="@+id/aciv_sell_today_dot"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_fragment_item_main_sell_today"
                    android:background="@color/transparent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@mipmap/disable_store_much"
                        app:backgroundTint="@color/gray220"
                        android:layout_centerInParent="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/aciv_much_store_icon" />

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@drawable/shape_circle"
                        app:backgroundTint="@color/gray220"
                        android:layout_centerInParent="true"
                        android:id="@+id/aciv_much_store_dot"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_fragment_item_main_store_match"
                    android:background="@color/transparent" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_select"
        android:id="@+id/layout_info">

        <ImageView
            android:layout_width="40dp"
            android:src="@mipmap/calender"
            android:padding="8dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_fragment_item_main_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2016/12/5"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_fragment_item_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="월 일일판매량"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <com.example.kangjisung.likeroom.Util.NoScrollViewPager
        android:id="@+id/vp_fragment_item_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_info">
    </com.example.kangjisung.likeroom.Util.NoScrollViewPager>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_floating">
        <include layout="@layout/include_product_floating" />

    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>