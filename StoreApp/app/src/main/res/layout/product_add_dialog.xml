<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:background="@drawable/dialog_background"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_width="300dp">

        <include
            android:layout_width="match_parent"
            android:layout_height="60dp"
            layout="@layout/include_dialog_title" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageView_emblem">

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/include_emblem" />

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@mipmap/icon_bread"
                        app:backgroundTint="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:id="@+id/layout_input"
                    android:layout_below="@+id/imageView_emblem"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="제품명"
                            android:layout_height="wrap_content"
                            style="@style/LikeRoomTheme.TextView.UserAdd"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0"
                            android:layout_width="80dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/editText_name"
                            style="@style/LikeRoomTheme.EditText"
                            android:background="@drawable/theme_textedit"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:layout_marginStart="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="원가"
                            android:layout_height="wrap_content"
                            style="@style/LikeRoomTheme.TextView.UserAdd"
                            android:layout_weight="0"
                            android:layout_width="80dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:id="@+id/editText_cost"
                            style="@style/LikeRoomTheme.EditText"
                            android:background="@drawable/theme_textedit"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:layout_marginStart="10dp"
                            android:inputType="numberSigned|numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="판매가"
                            android:layout_height="wrap_content"
                            style="@style/LikeRoomTheme.TextView.UserAdd"
                            android:layout_weight="0"
                            android:layout_width="80dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:id="@+id/editText_price"
                            style="@style/LikeRoomTheme.EditText"
                            android:background="@drawable/theme_textedit"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:layout_marginStart="10dp"
                            android:inputType="numberSigned|numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0">

                            <TextView
                                android:text="잔존가 "
                                android:layout_height="wrap_content"
                                style="@style/LikeRoomTheme.TextView.UserAdd"
                                android:layout_weight="0"
                                android:layout_width="match_parent" />

                            <TextView
                                android:text="(선택)"
                                android:layout_height="wrap_content"
                                style="@style/LikeRoomTheme.TextView.UserAdd"
                                android:layout_weight="0"
                                android:layout_width="match_parent"
                                android:id="@+id/textView7"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:id="@+id/editText_residual"
                            style="@style/LikeRoomTheme.EditText"
                            android:background="@drawable/theme_textedit"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:layout_marginStart="10dp"
                            android:inputType="numberSigned|numberDecimal" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:text="완료"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:id="@+id/button_ok"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/layout_input"
                    android:background="@drawable/button_basic"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>