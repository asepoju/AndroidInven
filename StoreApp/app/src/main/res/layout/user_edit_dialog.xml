<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:background="@drawable/dialog_background"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_width="300dp">

        <include
            android:layout_width="match_parent"
            android:layout_height="60dp"
            layout="@layout/include_dialog_title" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageView_emblem">

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/include_emblem" />

                    <ImageView
                        android:background="@mipmap/icon_floating_add"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:id="@+id/layout_input"
                    android:layout_below="@+id/imageView_emblem"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:text="이름"
                            android:layout_height="wrap_content"
                            style="@style/LikeRoomTheme.TextView.UserAdd"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0"
                            android:layout_width="80dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/editText_name"
                            style="@style/LikeRoomTheme.EditText"
                            android:background="@drawable/theme_textedit"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:layout_marginStart="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:text="전화번호"
                            android:layout_height="wrap_content"
                            style="@style/LikeRoomTheme.TextView.UserAdd"
                            android:layout_weight="0"
                            android:layout_width="80dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/editText_phone"
                            style="@style/LikeRoomTheme.EditText"
                            android:background="@drawable/theme_textedit"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:layout_marginStart="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="생년월일"
                            android:layout_height="wrap_content"
                            style="@style/LikeRoomTheme.TextView.UserAdd"
                            android:layout_weight="0"
                            android:layout_width="80dp" />

                        <EditText
                            android:text="날짜"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView_birth"
                            android:layout_weight="0"
                            android:background="@drawable/theme_textedit"
                            android:layout_marginStart="10dp"
                            android:textSize="20dp"
                            android:padding="3dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:text="완료"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:id="@+id/button_ok"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/layout_input"
                    android:background="@drawable/button_basic"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>